{
  "version": 2,
  "functions": {
    "api/index.ts": {
      "includeFiles": ["server-build/**"]
    }
  },
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist", "buildCommand": "npm run build" }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.ts" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
